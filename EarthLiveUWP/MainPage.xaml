<Page
    x:Class="EarthLiveUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EarthLiveUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Button x:Name="button_start" Margin="8" Content="Start" Click="button_start_Click"/>
            <Button x:Name="button_stop" Margin="8" Content="Stop" Click="button_stop_Click"/>
            <Button x:Name="button_setting" Margin="8" Content="Setting" Click="button_setting_Click"/>
            <TextBlock x:Name="download_status"/>
        </StackPanel>
        <Image x:Name="imageView" />
    </StackPanel>

</Page>
